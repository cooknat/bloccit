 <div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
       <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>
 
 <h2>Posts</h2>
 <% if has_posted?(@user) %>
   <%= render @user.posts %>
 <% else %>
   <%= "#{@user.name} has not submitted any posts yet." %>
 <% end %> 
 
 <h2>Comments</h2>
 <%= render @user.comments %>
 
 <h2>Favourite Posts</h2>
   <% current_user.favorites.each do |fav| %>
   <div class="user-fav">
    <div class="left">
        <%= render partial: 'votes/voting', locals: { post: fav.post } %>
          <% avatar_url = fav.post.user.avatar_url(40) %>
            <% if avatar_url %>
              <div class="avatar">
                <%= image_tag avatar_url, class: 'media-object' %>
              </div>
            <% end %> 
        </div>
         <div class="right">
           <h4 class="media-heading">
              <%= link_to fav.post.title, topic_post_path(fav.post.topic, fav.post) %>
           </h4>
            <small>
              submitted <%= time_ago_in_words(fav.post.created_at) %> ago by <%= fav.post.user.name %> <br>
              <%= fav.post.comments.count %> Comments
           </small>
         </div>
       </div>
   <% end %>